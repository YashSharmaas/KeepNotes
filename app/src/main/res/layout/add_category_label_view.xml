<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_12sdp"
    android:padding="@dimen/_16sdp"
    android:background="@drawable/backgrounf_note"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/overImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/baseline_label_24" />

    <TextView
        android:id="@+id/textFolderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="9dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="-46dp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toStartOf="@+id/checkBox"
        android:layout_toEndOf="@+id/overImg"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:text="Folder Label"
        android:textColor="@color/colorNoteSubTitleText"
        android:textSize="@dimen/_12ssp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:checked="false"
        android:scaleType="center" />

</RelativeLayout>